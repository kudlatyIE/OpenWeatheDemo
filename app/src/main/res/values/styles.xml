<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WeatherLabel" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGreyDark</item>
    </style>

    <style name="WeatherValue" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WeatherTitle" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomHoloDialog" parent="@android:style/Widget.Holo.Light.PopupMenu">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:borderlessButtonStyle">@android:style/Widget.Holo.Button.Borderless</item>
        <item name="android:buttonBarStyle">@android:style/Holo.ButtonBar.AlertDialog</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
